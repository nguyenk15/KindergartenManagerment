@model KindergartentManagerment.Models.RegisterViewModel
@{
    ViewBag.Title = AssCommonResource.KindergartenManagerment + " | " + AssCommonResource.RegisterNew;
    Layout = null;

}
@using KindergartentManagerment.Resources
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 2 | Registration Page</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.5 -->
    <link rel="stylesheet" href="/Content/bootstrap/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="/Content/themes/AdminLTE/css/AdminLTE.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="/Content/themes/AdminLTE/css/iCheck/square/blue.css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="hold-transition register-page">
        <header class="main-header">
            <nav class="navbar navbar-static-top" role="navigation">
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <li class="dropdown messages-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-globe"></i>
                            </a>
                            <ul class="dropdown-menu">
                                <!-- User image -->
                                <li> @Html.ActionLink("VietNam", "Set", "Language", new { lang = "vi" }, null)</li>
                                <li> @Html.ActionLink("English", "Set", "Language", new { lang = "en" }, null)</li>
                            </ul>
                        </li>
                        
                    </ul>
                    <ul class="nav navbar-nav">
                        <li>
                            @Html.Partial("_LoginPartial")
                        </li>
                    </ul>
                    
                </div>
            </nav>
           
            </header>
        <div class="register-box">
            <div class="register-logo">
                <a href="/Acount/LogOn"><b>@AssCommonResource.KindergartenManagerment</b></a>
            </div>
            <div class="register-box-body">
                <p class="login-box-msg">@AssCommonResource.RequestCreateAccount</p>
                @*<p>
                        Passwords are required to be a minimum of @Membership.MinRequiredPasswordLength characters in length.
                    </p>*@

                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="form-group has-feedback">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = AssCommonResource.Email })
                        </div>
                        <div class="form-group has-feedback">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = AssCommonResource.UserName })
                        </div>
                        <div class="form-group has-feedback">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = AssCommonResource.Password })
                        </div>
                        <div class="form-group has-feedback">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = AssCommonResource.RequestConfirmPassword })
                        </div>
                            <div class="row">
                                <div class="col-xs-8">
                                    <label for="file">  @AssCommonResource.UploadImage:</label>
                                    <input type="file" name="file" id="file" style="width: 100%;" />
                                </div>
                                <div class="col-xs-4">
                                    <br />
                                    @Html.DropDownListFor(m => m.UserRoles, (SelectList)ViewBag.Name, "", new { @placeholder = AssCommonResource.Role })
                                </div><!-- /.col -->
                            </div>
                            <div class="row">
                                <div class="col-xs-8">
                                    <div class="checkbox icheck">
                                        <label>
                                            <input type="checkbox"><a href="#">  @AssCommonResource.Requestterms</a>
                                        </label>
                                    </div>
                                </div>
                                <div class="col-xs-4">
                                    <input type="submit" class="btn-sm btn-primary btn-flat form-control" value=@AssCommonResource.RegisterNew />

                                </div>
                            </div>
                }

            </div>
        </div>
        <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
        <!-- jQuery 2.1.4 -->
        <script src="/Content/themes/AdminLTE/js/jQuery/jQuery-2.1.4.min.js"></script>
        <!-- Bootstrap 3.3.5 -->
        <script src="/Content/bootstrap/js/bootstrap.min.js"></script>
        <!-- iCheck -->
        <script src="/Content/themes/AdminLTE/js/iCheck/icheck.min.js"></script>
        <script>
            $(function () {
                $('input').iCheck({
                    checkboxClass: 'icheckbox_square-blue',
                    radioClass: 'iradio_square-blue',
                    increaseArea: '20%' // optional
                });
            });
        </script>
</body>
</html>