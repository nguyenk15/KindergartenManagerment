@using KindergartentManagerment.Resources
@{
    ViewBag.Title = AssCommonResource.KindergartenManagerment + " | " + ErrorResource.Title_500;
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        @ErrorResource.Title_500
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> @AssCommonResource.Home</a></li>
        <li class="active">@ErrorResource.Title_500</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">

    <div class="error-page">
        <h2 class="headline text-red">500</h2>
        <div class="error-content">
            <h3><i class="fa fa-warning text-red"></i> @ErrorResource.Header_500</h3>
            <p>
                @ErrorResource.Sugest_1_500
                 <a href="/home/index">@ErrorResource.Sugest_2_500</a> @ErrorResource.Sugest_3_500
            </p>
            <form class="search-form">
                <div class="input-group">
                    <input type="text" name="search" class="form-control" placeholder="Search">
                    <div class="input-group-btn">
                        <button type="submit" name="submit" class="btn btn-danger btn-flat"><i class="fa fa-search"></i></button>
                    </div>
                </div><!-- /.input-group -->
            </form>
        </div>
    </div><!-- /.error-page -->

</section><!-- /.content -->