@model KindergartentManagerment.Models.REM_OUT
@using KindergartentManagerment.Resources
@{
    ViewBag.Title = AssCommonResource.Out + " | " + AssCommonResource.Create;
    Layout = "~/Views/Shared/Layout.cshtml";
}
<section class="content-header">
    <h1>
        @AssCommonResource.Out
    </h1>

    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> @AssCommonResource.Home</a></li>
        <li><a href="#">@AssCommonResource.Revenueandexpenditures</a></li>
        <li class="active">@AssCommonResource.Out</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">@AssCommonResource.Create</h3>
                <div class="box-tools pull-right">
                    <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                </div>
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-md-6">

                        <div class="form-group">
                           <label>@OutResource.Out_Code</label>
                            @Html.EditorFor(model => model.Out_Code, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Out_Code, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>@OutResource.Out_Trade_Date</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                @Html.TextBoxFor(model => model.Out_Trade_Date, new { @class = "form-control datemask", @type = "text", style = "width: 100%;", required = "required" })
                                @Html.ValidationMessageFor(model => model.Out_Trade_Date)
                            </div>
                        </div>

                        <div class="form-group">
                            <label>@OutResource.Out_Write_Date</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                @Html.TextBoxFor(model => model.Out_Write_Date, new { @class = "form-control datemask", @type = "text", style = "width: 100%;", required = "required" })
                                @Html.ValidationMessageFor(model => model.Out_Write_Date)
                            </div>
                        </div>

                        <div class="form-group">
                            <label>@OutResource.Staff_Name</label>
                            @Html.EditorFor(model => model.STAFF_ID, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.STAFF_ID, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>@OutResource.Salary</label>
                            @Html.EditorFor(model => model.Salary, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Salary, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>@OutResource.Out_Year</label>
                            @Html.EditorFor(model => model.Out_Year, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Out_Year, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>@OutResource.Out_Month</label>
                            @Html.EditorFor(model => model.Out_Month, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Out_Month, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>@OutResource.Supplier_Name</label>
                            @Html.EditorFor(model => model.Supplier_ID, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Supplier_ID, "", new { @class = "text-danger" })
                        </div>

                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>@OutResource.Receiver_Name</label>
                            @Html.EditorFor(model => model.Receiver_Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Receiver_Name, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>@OutResource.Receiver_Address</label>
                            @Html.EditorFor(model => model.Receiver_Address, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Receiver_Address, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>@OutResource.Out_Reason</label>
                            @Html.EditorFor(model => model.Out_Reason, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Out_Reason, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>@OutResource.Out_Total</label>
                            @Html.EditorFor(model => model.Out_Total, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Out_Total, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>@OutResource.Out_Paid</label>
                            @Html.EditorFor(model => model.Out_Paid, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Out_Paid, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>@OutResource.Out_Debt</label>
                            @Html.EditorFor(model => model.Out_Debt, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Out_Debt, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>@AssCommonResource.Notes</label>
                            @Html.EditorFor(model => model.Notes, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-footer">
                @Html.ActionLink(AssCommonResource.BacktoList, "Index", "Out", new { @class = "btn btn-sm btn-default btn-flat pull-left" })
                <input type="submit" value="@AssCommonResource.Create" class="btn btn-sm btn-primary btn-flat pull-right" />
            </div>
        </div>
    }
</section>
@section orther_scripts{
    <!-- InputMask -->
    <script src="/Content/plugins/input-mask/jquery.inputmask.js"></script>
    <script src="/Content/plugins/input-mask/jquery.inputmask.date.extensions.js"></script>
    <script src="/Content/plugins/input-mask/jquery.inputmask.extensions.js"></script>
    <script>
    $(function () {
            //Datemask dd/mm/yyyy
            $(".datemask").inputmask({
                alias: "dd/mm/yyyy"
            });
    });
    </script>
}

