@model KindergartentManagerment.Models.DM_DEPARTMENTINFO
@using KindergartentManagerment.Resources
@{
    ViewBag.Title = AssCommonResource.Department + " | " + AssCommonResource.Edit;
    Layout = "~/Views/Shared/Layout.cshtml";
    KindergartentManagerment.Models.ApplicationDbContext db = new KindergartentManagerment.Models.ApplicationDbContext();
}
<link href="~/Content/Label.css" rel="stylesheet" />
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        @AssCommonResource.Department

    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> @AssCommonResource.Home</a></li>
        <li><a href="#">@AssCommonResource.Kindergarten</a></li>
        <li class="active">@AssCommonResource.Department</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">@AssCommonResource.Edit</h3>
                    <br />
                    <br />
                    @AssCommonResource.Asterisk
                </div><!-- /.box-header -->
                <div class="box-body">

                    @using (Html.BeginForm("Edit", "Department", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.Depatment_ID)
                            <!-- overview-->
                            <div class="box box-info">
                                <div class="box-header with-border">
                                    <h3 class="box-title">@AssCommonResource.Overview</h3>
                                    <div class="box-tools pull-right">
                                        <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                                    </div>
                                </div>
                                <div class="box-body">

                                    <!-- Group 1-->
                                    <div class="form-group">
                                        <div class="control-label col-md-6">
                                            <div class="my-control-label col-md-4">
                                                <t></t>@AssCommonResource.Department
                                            </div>
                                            <div class="col-md-4">
                                                @Html.EditorFor(model => model.DepartmentName, new { htmlAttributes = new { @class = "form-control", required = "required", @style = "width:100%;" } })
                                                @Html.ValidationMessageFor(model => model.DepartmentName, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                     </div>
                                    <!-- end group-->
                                    <!-- Group 2-->
                                    <div class="form-group">
                                        <div class="control-label col-md-6">
                                            <div class="control-label col-md-4">
                                                @AssCommonResource.Notes
                                            </div>
                                            <div class="col-md-4">
                                                @Html.EditorFor(model => model.Notes, new { htmlAttributes = new { @class = "form-control", @style = "width:100%;" } })
                                                @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <!-- end group-->
                                </div>
                            </div>
                            <!-- End group-->
                        </div>

                        <!-- Action click-->
                        <div class="box-footer clearfix">
                            @Html.ActionLink(AssCommonResource.BacktoList, "Index", "Department", new { @class = "btn btn-sm btn-default btn-flat pull-left" })
<input type="submit" value=@AssCommonResource.Save class="btn btn-sm btn-warning btn-flat pull-right" />
                        </div><!-- /.box-footer -->
                    }
                </div>
            </div>
        </div>
    </div>
</section>
