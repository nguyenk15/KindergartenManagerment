@model KindergartentManagerment.Models.GM_CLASSINFO

@using KindergartentManagerment.Resources

@{
    ViewBag.Title = AssCommonResource.KindergartenManagerment + " | " + AssCommonResource.Create;
    Layout = "~/Views/Shared/Layout.cshtml";
    KindergartentManagerment.Models.ApplicationDbContext db = new KindergartentManagerment.Models.ApplicationDbContext();
}
<link href="~/Content/Label.css" rel="stylesheet"/>
<section class="content-header">
    <h1>
        @AssCommonResource.ClassOverview
    </h1>

    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> @AssCommonResource.Home</a></li>
        <li><a href="#">@AssCommonResource.Kindergarten</a></li>
        <li class="active">@AssCommonResource.ClassOverview</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">@AssCommonResource.Create</h3>
                <br />
                <br />
                    @AssCommonResource.Asterisk
            </div><!-- /.box-header -->
                <div class="box-body">

                    @using (Html.BeginForm("Create", "ClassInfo", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <!-- overview-->
                            <div class="box box-info">
                                <div class="box-header with-border">
                                    <h3 class="box-title">@AssCommonResource.Overview</h3>
                                    <div class="box-tools pull-right">
                                        <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                                    </div>
                                </div>
                                <div class="box-body">

                                    <!-- Group 1-->
                                    <div class="form-group">
                                        <div class="control-label col-md-6">
                                            <div class="my-control-label col-md-4">
                                                <t></t>@ClassCommonResource.ClassName
                                            </div>
                                            <div class="col-md-8">
                                                @Html.EditorFor(model => model.Class_Name, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                                    @Html.ValidationMessageFor(model => model.Class_Name, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="control-label col-md-6">
                                                <div class="my-control-label col-md-4">
                                                    @ClassCommonResource.Grade
                                                </div>
                                                <div class="col-md-8">
                                                   @Html.DropDownListFor(model => model.GradeID, ViewBag.GradeList as SelectList, new { @class = "form-control", required = "required" })
                                                    @Html.ValidationMessageFor(model => model.Class_Name, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <!--Group 2-->
                                        <div class="form-group">
                                            <div class="control-label col-md-6">
                                                <div class="control-label col-md-4">
                                                    @ClassCommonResource.Teacher
                                                </div>
                                                <div class="col-md-8">
                                                    @Html.DropDownListFor(model => model.Teacher_ID, ViewBag.TeacherList as SelectList, new { @class = "form-control"})
                                                    @Html.ValidationMessageFor(model => model.Class_Name, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="control-label col-md-6">
                                                <div class="control-label col-md-4">
                                                    @ClassCommonResource.Kindergartener
                                                </div>
                                                <div class="col-md-8">
                                                    @Html.DropDownListFor(model => model.Kindergartener_ID,ViewBag.KindergartenerList as SelectList, new { @class = "form-control"})
                                                    @Html.ValidationMessageFor(model => model.Class_Name, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Group 3-->
                                        <div class="form-group">
                                            <div class="control-label col-md-6">
                                                <div class="control-label col-md-4">
                                                    @AssCommonResource.Notes
                                                </div>
                                                <div class="col-md-8">
                                                    @Html.EditorFor(model => model.Notes,
                                                new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Class_Name, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                        </div>

                            <!-- Action click-->
                        <div class="box-footer clearfix">
                            @Html.ActionLink(AssCommonResource.BacktoList, "Index", "Classinfo", new { @class = "btn btn-sm btn-default btn-flat pull-left" })
                            <input type="submit" value="@AssCommonResource.Create" class="btn btn-sm btn-primary btn-flat pull-right" />
                        </div><!-- /.box-footer -->
                    }
                    </div>
                </div>
            </div>
        </div>
    </section>


