@using KindergartentManagerment.Resources
@{
    ViewBag.Title = AssCommonResource.KindergartenManagerment + " | " + AssCommonResource.RoleIndex;
    Layout = "~/Views/Shared/Layout.cshtml";
}
<section class="content-header">
    <h1>
        @AssCommonResource.RoleIndex
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> @AssCommonResource.Home</a></li>
        <li><a href="#">@AssCommonResource.Admin</a></li>
        <li class="active">@AssCommonResource.RoleIndex</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">@Html.ActionLink(AssCommonResource.CreateNewRole, "RoleCreate") | @Html.ActionLink(AssCommonResource.RoleAddToUser, "RoleAddToUser")</h3>
                </div><!-- /.box-header -->
                <div class="box-body">

                    <div class="box box-info">
                        <div class="box-header with-border">
                            <h3 class="box-title">@AssCommonResource.RoleIndex</h3>
                            <div class="box-tools pull-right">
                                <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                            </div>
                        </div>
                        <div class="box-body">
                            @foreach (string s in Model)
                            {
                                <p>
                                    @s
                                    <span onclick=" return confirm('Are you sure to delete?') ">
                                        <a href="/Admin/Role/RoleDelete?RoleName=@s" class="delLink">Delete</a>
                                    </span>
                                </p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>