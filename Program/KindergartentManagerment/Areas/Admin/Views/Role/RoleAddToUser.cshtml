@using KindergartentManagerment.Resources
@{
    ViewBag.Title = AssCommonResource.KindergartenManagerment + " | " + AssCommonResource.RoleAddToUser;
    Layout = "~/Views/Shared/Layout.cshtml";
}
<section class="content-header">
    <h1>
        @AssCommonResource.RoleCreate
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> @AssCommonResource.Home</a></li>
        <li><a href="#">@AssCommonResource.Admin</a></li>
        <li class="active">@AssCommonResource.RoleAddToUser</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">@Html.ActionLink(AssCommonResource.CreateNewRole, "RoleCreate") | @Html.ActionLink(AssCommonResource.Role, "RoleIndex")</h3>
                </div><!-- /.box-header -->
                <div class="box-body">

                    <!-- RoleAddToUser -->
                    <div class="box box-info">
                        <div class="box-header with-border">
                            <h3 class="box-title">@AssCommonResource.RoleAddToUser</h3>
                            <div class="box-tools pull-right">
                                <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                            </div>
                        </div>
                        <div class="box-body">
                        @using (Html.BeginForm("RoleAddToUser", "Role"))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            <div class="form-horizontal">
                                <div class="message-success">@ViewBag.ResultMessage</div>
                                <div class="form-group">
                                    <div class="col-md-3">
                                        <label>@AssCommonResource.UserName :</label>
                                        @Html.DropDownList("UserName", ViewBag.Users as SelectList,new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-3">
                                        <label>@AssCommonResource.RoleName :</label>
                                        @Html.DropDownList("RoleName", ViewBag.Roles as SelectList, new { @class = "form-control" })
                                    </div>
                                </div>
                                <input type="submit" value=@AssCommonResource.Save class="btn btn-sm btn-success btn-flat pull-left" />
                            </div>
                        }
                        </div>
                    </div>

            <!-- Remove role from user -->
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">@AssCommonResource.RequestRemoveRoleUser</h3>
                    <div class="box-tools pull-right">
                        <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div>
                </div>
                <div class="box-body">
                    @using (Html.BeginForm("DeleteRoleForUser", "Role"))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <div class="form-horizontal">
                            <div class="form-group">
                                <div class="col-md-3">
                                    <label>@AssCommonResource.UserName :</label>
                                    @Html.DropDownList("UserName", ViewBag.Users as SelectList, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3">
                                    <label>@AssCommonResource.RoleName :</label>
                                    @Html.DropDownList("RoleName", ViewBag.Roles as SelectList, new { @class = "form-control" })
                                </div>
                            </div>

                            <input type="submit" value=@AssCommonResource.DeletethisuserfromRole class="btn btn-sm btn-danger btn-flat pull-left" />
                        </div>
                    }
                </div>
            </div>

            <!-- List roles for user -->
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">@AssCommonResource.Listrolesforuser</h3>
                    <div class="box-tools pull-right">
                        <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div>
                </div>
                <div class="box-body">
                    @using (Html.BeginForm("GetRoles", "Role"))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-horizontal">
                            <div class="form-group">
                                <div class="col-md-3">
                                    <label>@AssCommonResource.UserName :</label>
                                    @Html.DropDownList("UserName", ViewBag.Users as SelectList, new { @class = "form-control" })
                                    <br />
                                    <input type="submit" value=@AssCommonResource.GetRolesforthisUser class="btn btn-sm btn-primary btn-flat pull-left" />
                                </div>
                            </div>

                        </div>

                    }

                    @if (ViewBag.RolesForThisUser != null)
                    {
                        <text>
                            <h3>@AssCommonResource.Rolesforthisuser </h3>
                            <ol>
                                @foreach (string s in ViewBag.RolesForThisUser)
                                {
                                    <li>@s</li>
                                }
                            </ol>
                        </text>
                    }
                </div>

            </div>
        </div>
                    </div>

        </div>
    </div>
</section>