@using KindergartentManagerment.Resources
@{
    ViewBag.Title = AssCommonResource.KindergartenManagerment + " | " + AssCommonResource.RoleCreate;
    Layout = "~/Views/Shared/Layout.cshtml";
}
<section class="content-header">
    <h1>
        @AssCommonResource.RoleCreate
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> @AssCommonResource.Home</a></li>
        <li><a href="#">@AssCommonResource.Admin</a></li>
        <li class="active">@AssCommonResource.RoleCreate</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">@Html.ActionLink(AssCommonResource.Role, "RoleIndex") | @Html.ActionLink(AssCommonResource.RoleAddToUser, "RoleAddToUser")</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <div class="box box-info">
                        <div class="box-header with-border">
                            <h3 class="box-title">@AssCommonResource.RoleCreate</h3>
                            <div class="box-tools pull-right">
                                <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                            </div>
                        </div>
                        <div class="box-body">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)
                                <div class="form-horizontal">
                                    <div class="form-group">
                                        <div class="col-md-3">
                                            <label>@AssCommonResource.RoleName</label>
                                            @Html.TextBox("RoleName", null, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <input type="submit" value=@AssCommonResource.Save class="btn btn-sm btn-primary btn-flat fa-pull-left" />
                                </div>
                                
                            }
                                </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>