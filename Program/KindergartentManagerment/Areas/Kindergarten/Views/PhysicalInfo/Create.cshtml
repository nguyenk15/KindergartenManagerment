@model KindergartentManagerment.Models.KM_PHYSICALINFO
@using KindergartentManagerment.Resources
@{
    ViewBag.Title = AssCommonResource.Physicalinf + " | " + AssCommonResource.Create;
    Layout = "~/Views/Shared/Layout.cshtml";
}
<section class="content-header">
    <h1>
        @AssCommonResource.Physicalinf
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> @AssCommonResource.Home</a></li>
        <li><a href="#">@AssCommonResource.Kindergarten</a></li>
        <li class="active">@AssCommonResource.Physicalinf</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">@AssCommonResource.Create_New</h3>
                </div>
                <div class="box-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="box box-info">
                                <div class="box-header with-border">
                                    <h3 class="box-title">@AssCommonResource.Physicalinf</h3>
                                    <div class="box-tools pull-right">
                                        <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                                    </div>
                                </div>
                                <div class="box-body">

                                    <!-- STUDENT_ID -->
                                    <div class="form-group">
                                        <div class="control-label col-md-2">
                                            @PhysicalInfoResource.STUDENT_ID
                                        </div>
                                        <div class="col-md-9">
                                            @Html.EditorFor(model => model.STUDENT_ID, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.STUDENT_ID, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <!--Group Height and Weight-->
                                    <div class="form-group">
                                            <div class="control-label col-md-2">
                                                @PhysicalInfoResource.Height
                                            </div>
                                            <div class="col-md-2">
                                                @Html.TextBoxFor(model => model.Height, new {@class = "form-control inputmaskheight",type = "text"})
                                                @Html.ValidationMessageFor(model => model.Height, "", new { @class = "text-danger" })
                                            </div>

                                            <div class="control-label col-md-2">
                                                @PhysicalInfoResource.Weight
                                            </div>
                                            <div class="col-md-2">
                                                @Html.TextBoxFor(model => model.Weight, new { @class = "form-control inputmaskweight", type = "text" })
                                                @Html.ValidationMessageFor(model => model.Weight, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="control-label col-md-2">
                                                @PhysicalInfoResource.BMI
                                            </div>
                                            <div class="col-md-1">
                                                @Html.TextBoxFor(model => model.BMI, new { @class = "form-control inputmaskweight", type = "text" , @disabled = "disabled" })
                                                @Html.ValidationMessageFor(model => model.BMI, "", new { @class = "text-danger" })
                                            </div>
                                    </div>

                                    <!-- Dermatology-->
                                    <div class="form-group">
                                        <div class="control-label col-md-2">
                                            @PhysicalInfoResource.Dermatology
                                        </div>
                                        <div class="col-md-9">
                                            @Html.EditorFor(model => model.Dermatology, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Dermatology, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <!-- Otolaryngology -->
                                    <div class="form-group">
                                        <div class="control-label col-md-2">
                                            @PhysicalInfoResource.Otolaryngology
                                        </div>
                                        <div class="col-md-9">
                                            @Html.EditorFor(model => model.Otolaryngology, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Otolaryngology, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <!-- Dentomaxillofacial -->
                                    <div class="form-group">
                                        <div class="control-label col-md-2">
                                            @PhysicalInfoResource.Dentomaxillofacial
                                        </div>
                                        <div class="col-md-9">
                                            @Html.EditorFor(model => model.Dentomaxillofacial, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Dentomaxillofacial, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <!-- RespiratorySystem -->
                                    <div class="form-group">
                                        <div class="control-label col-md-2">
                                            @PhysicalInfoResource.RespiratorySystem
                                        </div>
                                        <div class="col-md-9">
                                            @Html.EditorFor(model => model.RespiratorySystem, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.RespiratorySystem, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <!-- Note -->
                                    <div class="form-group">
                                        <div class="control-label col-md-2">
                                            @AssCommonResource.Notes
                                        </div>
                                        <div class="col-md-9">
                                            @Html.EditorFor(model => model.Notes, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    @*<div class="form-group">
                                        @Html.LabelFor(model => model.Months, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.Months, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Months, "", new { @class = "text-danger" })
                                        </div>
                                    </div>*@

                                </div>
                            </div>
                        </div>

                        <!-- Action click-->
                        <div class="box-footer clearfix">
                            @Html.ActionLink(AssCommonResource.BacktoList, "Index", "PhysicalInfo", new { @class = "btn btn-sm btn-default btn-flat pull-left" })
                            <input type="submit" value="@AssCommonResource.Create" class="btn btn-sm btn-primary btn-flat pull-right" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
@section orther_scripts{
    <script>
    $(function () {
            //Datemask dd/mm/yyyy
            $(".datemask").inputmask({
                alias: "dd/mm/yyyy"
            });
            //Datemask2 mm/dd/yyyy
            $("#datemask2").inputmask("mm/dd/yyyy", {"placeholder": "mm/dd/yyyy"});
            //Money Euro
            $("[data-mask]").inputmask();
            $('.inputmask').inputmask({
                mask: '9999-999-999'
            })
            $('.inputmaskheight').inputmask({
                mask: '9,99'
            })
            $('.inputmaskweight').inputmask({
                mask: '99,99'
            })
});
    </script>
}