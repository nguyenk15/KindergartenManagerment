@model KindergartentManagerment.Models.DD_NhomThucPham
@using KindergartentManagerment.Resources
@{
    ViewBag.Title = AssCommonResource.IngredientType + " | " + AssCommonResource.Details;
    Layout = "~/Views/Shared/Layout.cshtml";
    KindergartentManagerment.Models.ApplicationDbContext db = new KindergartentManagerment.Models.ApplicationDbContext();
}

<section class="content-header">
    <h1>
        @AssCommonResource.IngredientType
    </h1>

    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> @AssCommonResource.Home</a></li>
        <li><a href="#">@AssCommonResource.Kindergarten</a></li>
        <li class="active">@AssCommonResource.IngredientType</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">@AssCommonResource.Details</h3>
                </div><!-- /.box-header -->
                <div class="box-body">

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <!-- overview-->
                        <div class="box box-info">
                            <div class="box-header with-border">
                                <h3 class="box-title">@AssCommonResource.Overview</h3>
                                <div class="box-tools pull-right">
                                    <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                                </div>
                            </div>
                            <div class="box-body">

                                <!-- Group 1-->
                                <div class="form-group">
                                        <div class="control-label col-md-2">
                                            @IngredientsCommonResource.NhomThucPham
                                        </div>
                                        <div class="col-md-4">
                                                @Html.EditorFor(model => model.TenNhomThucPham,
                                                   new { htmlAttributes = new { @class = "form-control", required = "required", @placeholder = StudentOverviewResource.RequireName, @disabled = "disabled", @style = "width:100%;" } })
                                        </div>
                                </div>
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                        @AssCommonResource.Notes
                                    </div>
                                    <div class="col-md-4">
                                            @Html.EditorFor(model => model.Notes,
                                                   new { htmlAttributes = new { @class = "form-control", @disabled = "disabled", @style = "width:100%;" } })
                                    </div>
                                </div>
                                <!-- end group-->
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Action click-->
                <div class="box-footer clearfix">
                    <div class="form-group">
                        <div class="col-md-8">
                            @Html.ActionLink(AssCommonResource.Edit, "Edit", new { id = Model.NhomThucPhamID, @class = "btn btn-sm btn-info btn-flat pull-left" }) |
                            @Html.ActionLink(AssCommonResource.BacktoList, "Index", new { @class = "btn btn-sm btn-info btn-flat pull-left" })
                        </div>
                    </div>
                </div><!-- /.box-footer -->
            </div>
        </div>
    </div>
</section>
